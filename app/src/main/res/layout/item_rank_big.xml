<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size30"
        android:paddingRight="@dimen/size30">

        <ImageView
            android:id="@+id/iv_fans_contribution_num"
            android:layout_width="@dimen/size66"
            android:layout_height="@dimen/size80"
            android:layout_marginRight="@dimen/size40"
            android:src="@mipmap/fsgxb_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_fans_contribution_head"
                android:layout_width="@dimen/size120"
                android:layout_height="@dimen/size120"
                android:src="@mipmap/img_dashentouxiang" />


            <LinearLayout
                android:id="@+id/layout_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fans_contribution_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="宝宝不乖"
                    android:textColor="#333333"
                    android:textSize="@dimen/size30" />

                <TextView
                    android:id="@+id/tv_fans_contribution_contri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size20"
                    android:text="贡献:30"
                    android:textColor="#999999"
                    android:textSize="24px" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1d1d1" />

</LinearLayout>