<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/title_auth"
        layout="@layout/include_title_bar" />

<TextView
    android:layout_width="200px"
    android:layout_height="200px"
    android:text="LOGO"
    android:gravity="center"
    android:layout_marginTop="@dimen/size120"
    android:layout_marginBottom="@dimen/size120"
    android:background="@drawable/bg_button_stroke_gray"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="110px"
        android:paddingRight="110px"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/et_info_auth_phone"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="@dimen/size25"
            android:paddingRight="@dimen/size25"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_shouji"
            android:gravity="center_vertical"
            android:drawablePadding="20px"
            android:inputType="number"
            android:hint="请输入您的手机号码"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textSize="13sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:padding="@dimen/size25"
            android:background="@null"
            android:drawablePadding="20px"
            android:drawableLeft="@mipmap/icon_mm"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/size30"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textSize="@dimen/size26" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="120px"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="登录"
            android:gravity="center"
            android:background="@drawable/bg_button_theme5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:clickable="true"
                android:textSize="24px"
                android:textColor="@color/col999"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/col999"
                />
            <TextView
                android:id="@+id/tv_forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textSize="24px"
                android:clickable="true"
                android:textColor="@color/col999"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
