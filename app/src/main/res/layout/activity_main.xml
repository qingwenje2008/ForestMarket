<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/main_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>
    <TextView
        android:id="@+id/line_main"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fengeline"
        android:layout_above="@+id/lin_menu"
        />
x`
    <LinearLayout
        android:id="@+id/lin_menu"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/main_home_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/iv_main_home"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/sele_main_home"
                />

            <TextView
                android:id="@+id/tv_main_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_marginTop="5px"
                android:textSize="20px"
                android:textColor="@color/theme"
                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/main_referee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/iv_main_referee"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/sele_main_referee"
                />

            <TextView
                android:id="@+id/tv_main_referee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:layout_marginTop="5px"
                android:textSize="@dimen/size23"
                android:textColor="@color/unselect"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_my_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            >
            <ImageView
                android:id="@+id/iv_main_my"
                android:layout_width="40px"
                android:layout_height="40px"
                android:background="@drawable/sele_main_my"
                />
            <TextView
                android:id="@+id/tv_main_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:layout_marginTop="@dimen/size5"
                android:textSize="@dimen/size20"
                android:textColor="@color/unselect"
                />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
