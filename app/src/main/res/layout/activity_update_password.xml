<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeded"
    android:orientation="vertical">

    <include
        android:id="@+id/title_auth"
        layout="@layout/include_title_bar" />


    <LinearLayout
        android:id="@+id/lin_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_auth"
        android:background="@color/white"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:padding="@dimen/size25"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textColorHint="@color/col999"
            android:textSize="@dimen/size30" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />


        <EditText
            android:id="@+id/et_newPwd"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:padding="@dimen/size25"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textColorHint="@color/col999"
            android:textSize="@dimen/size30" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />


        <EditText
            android:id="@+id/et_againNewPwd"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@null"
            android:clickable="true"
            android:gravity="center_vertical"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:padding="@dimen/size25"
            android:textColor="@color/col666"
            android:textColorHint="@color/col999"
            android:textSize="@dimen/size30"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />


    </LinearLayout>

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size100"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size95"
        android:layout_marginLeft="25px"
        android:gravity="center"
        android:layout_marginRight="25px"
        android:background="@drawable/bg_button_theme5"
        android:text="确认修改"
        android:textColor="#ffffff"
        android:textSize="36px" />
</RelativeLayout>
