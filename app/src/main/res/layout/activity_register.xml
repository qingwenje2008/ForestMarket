<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/title_auth"
        layout="@layout/include_title_bar" />

<TextView
    android:id="@+id/logo"
    android:layout_below="@+id/title_auth"
    android:layout_width="150px"
    android:layout_height="150px"
    android:layout_centerHorizontal="true"
    android:text="LOGO"
    android:gravity="center"
    android:layout_marginTop="@dimen/size50"
    android:layout_marginBottom="@dimen/size30"
    android:background="@drawable/bg_button_stroke_gray"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="110px"
        android:paddingRight="110px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/et_info_auth_phone"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="@dimen/size25"
            android:paddingRight="@dimen/size25"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_shouji"
            android:gravity="center_vertical"
            android:drawablePadding="20px"
            android:inputType="number"
            android:hint="请输入您的姓名"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textSize="26px" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="@dimen/size25"
            android:paddingRight="@dimen/size25"
            android:background="@null"
            android:layout_marginTop="10px"
            android:drawableLeft="@mipmap/icon_mm"
            android:gravity="center_vertical"
            android:drawablePadding="20px"
            android:inputType="textPassword"
            android:hint="请输入学校"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textSize="26px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="@dimen/size25"
            android:paddingRight="@dimen/size25"
            android:background="@null"
            android:layout_marginTop="10px"
            android:drawableLeft="@mipmap/icon_mm"
            android:gravity="center_vertical"
            android:drawablePadding="20px"
            android:inputType="textPassword"
            android:hint="请输入学号"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textSize="26px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="@dimen/size25"
            android:paddingRight="@dimen/size25"
            android:background="@null"
            android:layout_marginTop="10px"
            android:drawableLeft="@mipmap/icon_mm"
            android:gravity="center_vertical"
            android:drawablePadding="20px"
            android:inputType="textPassword"
            android:hint="请输入邮箱"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textSize="26px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="@dimen/size25"
            android:paddingRight="@dimen/size25"
            android:background="@null"
            android:layout_marginTop="10px"
            android:drawableLeft="@mipmap/icon_mm"
            android:gravity="center_vertical"
            android:drawablePadding="20px"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textSize="26px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="@dimen/size25"
            android:paddingRight="@dimen/size25"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_mm"
            android:gravity="center_vertical"
            android:drawablePadding="20px"
            android:layout_marginTop="10px"
            android:inputType="textPassword"
            android:hint="请再次输入密码"
            android:singleLine="true"
            android:textColor="@color/col666"
            android:textSize="26px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="60px"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="注册"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/bg_button_theme5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/col999"
                />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号，登录"
                android:textSize="24px"
                android:clickable="true"
                android:textColor="@color/col999"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
